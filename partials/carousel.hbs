{{!-- Homepage Carousel --}}
<div class="hero">
    <div id="carousel-home" class="carousel is-hidden-mobile">
        {{!-- get 10 posts with tag #carousel as --}}
        {{#get "posts" limit="10" include="tags" filter="tags:[hash-carousel]" as |carousel|}} 
        {{#foreach carousel}}
            <div class="hero-body">
                <article class="item round-border-6">
                    <a href="{{url}}" class="hover-effect">
                        <span class="overlay"></span>		
                        <span class="cover" style="background: url({{img_url feature_image size="carousel"}});
                        background-position: center center;
                        background-repeat: no-repeat;
                        background-size: cover;
                        "></span>
                        <div class="meta grid-container grid-parent">
                            <h6 class="title">{{title}}</h6>
                            <div class="level is-mobile">
                                <div class="level-left">
                                    {{#if tags}}
                                        <div class="level-item buttons">
                                            {{#foreach tags limit="2"}}
                                                <span class="button is-small is-white  has-text-weight-semibold">{{name}}</span>
                                            {{/foreach}}
                                        </div>
                                    {{/if}}
                                </div>
                                <div class="level-right">
                                    <time class="level-item" datetime="{{date format=(t "DD MMMM YYYY")}}">
                                        <i class="far fa-clock"> </i>&nbsp;{{date format=(t "DD MMMM YYYY")}}
                                    </time> 
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </a>
                    
                </article>
            </div>
        {{/foreach}}
		{{/get}}
    </div>
</div>