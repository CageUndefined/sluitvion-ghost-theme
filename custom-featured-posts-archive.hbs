{{!-- Custom Template: Featured Posts Archive | 2019.06.23--}}

{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- page meta --}}
{{#post}}
{{#if feature_image}}
<section class="hero tag-list-header is-bold bg-cover-center" style="background-image:url({{feature_image}});">
{{else}}
<section class="hero tag-list-header is-bold bg-cover-center" style="background-image: linear-gradient(to bottom right, #acffc5, #078ddb);">
{{/if}}
  <div class="hero-body has-darker-modal is-montserrat">
    <div class="container has-text-centered">
        <h1 class="title is-vmargin-2 is-capitalized has-text-white is-marginless-bottom">
            <span class="is-padding-05-15 round-border-6">
                <i class="fas fa-fire-alt"></i> {{title}}
            </span>
        </h1>
        <h2 class="subtitle is-vmargin-2 has-text-white is-centered is-margin-auto" style="max-width:760px;">
            {{content}}
        </h2>
    </div>
  </div>
</section>
{{/post}}


<main class="section">
    <div class="columns">
        <div class="column is-2-widescreen is-1-desktop is-hidden-touch"></div>
        <div class="column is-8-widescreen is-10-desktop is-12-tablet">

            {{#get "posts" filter="featured:true" order="published_at desc"}}
                {{#foreach posts}}
                    {{!-- post_item: for index & home cards --}}
                    <article class="box is-paddingless is-clipped has-shadow-lift margin-bottom-25 can-scale">
                        <div class="columns post-card is-marginless">
                            {{!-- featured_image --}}
                            {{#if feature_image}}
                                <a class="column is-hidden-mobile is-paddingless" href="{{url}}" alt="{{title}}" title="{{title}}">
                                    <div class="featured-image" style="background-image:url({{img_url feature_image size="s"}});"></div>    
                                </a>
                                <a class="column is-hidden-tablet" href="{{url}}" alt="{{title}}" title="{{title}}">
                                    <div class="featured-image" style="background-image:url({{img_url feature_image size="s"}});"></div>    
                                </a>
                            
                            {{!-- post info --}}
                            <div class="column is-8 is-paddingless">
                            {{else}}
                            <div class="column is-12 is-paddingless">
                            {{/if}}
                                <div class="post-info">

                                    {{!-- meta --}}
                                    <div class="level is-mobile is-montserrat is-uppercase is-margin-bottom-1">
                                        <div class="level-left">
                                            {{#primary_tag}}
                                            <div class="level-item">
                                                {{!-- display one tag --}}
                                                <div class="buttons are-small">
                                                    <a href="{{url}}" class="button is-light has-text-weight-semibold">{{name}}</a>
                                                </div>
                                            </div>
                                            {{/primary_tag}}
                                            <div class="level-item is-size-7 ">
                                                {{date format=(t "DD MMMM YYYY")}}
                                            </div>
                                        </div>
                                    </div>

                                    {{!-- heading & content --}}
                                    <h1 class="title is-3 is-size-5-mobile is-margin-bottom-1">
                                        <a href="{{url}}" class="is-montserrat has-text-black">{{title}}</a>
                                    </h1>
                                    {{#if feature_image}}
                                    <p class="is-hidden-mobile" style="margin-bottom:1.5rem;">
                                    {{else}}
                                    <p class="is-size-7-mobile is-margin-bottom-1" style="margin-bottom:1.5rem;">
                                    {{/if}}
                                        {{#if meta_description}}
                                            {{meta_description}}
                                        {{else}}
                                            {{excerpt words="40"}}
                                        {{/if}}
                                    </p>

                                </div>  
                            </div>
                        </div>
                    </article>
                {{/foreach}}
            {{/get}}

        </div>
        <div class="column is-hidden-touch"></div>
    </div>
</main>

